{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "noEmitOnError": true,
    // "lib": [],
    "jsx": "react",
    "declaration": true,
    "outDir": "ts-output",
    "declarationDir": "dist",
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
